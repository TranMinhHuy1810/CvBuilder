<!-- flatpickr package -->
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>
<link
    rel="stylesheet"
    type="text/css"
    href="https://npmcdn.com/flatpickr/dist/themes/dark.css"
/>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<link rel="stylesheet" href="/css/home_page.css" />

<head>
    <h1>Cv Builder</h1>
</head>
<body>
    <form
        data-multi-step
        class="multi-step-form"
        method="POST"
        action="/register"
    >
        <h2>Progess</h2>
        <div class="progressbar">
            <div class="progress" id="progress"></div>
            <div
                class="progress-step progress-step-active"
                data-title="Intro"
            ></div>
            <div class="progress-step" data-title="Profile"></div>
            <div class="progress-step" data-title="Education"></div>
            <div class="progress-step" data-title="Project"></div>
            <div class="progress-step" data-title="Skill"></div>
            <div class="progress-step" data-title="Link"></div>
        </div>

        <fieldset class="card" data-step>
            <h3 class="step-title">Personal Details</h3>
            <div class="form-group">
                <label for="first_name">First Name</label>
                <input
                    type="text"
                    name="first_name"
                    id="first_name"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="last_name">Last Name</label>
                <input
                    type="text"
                    name="last_name"
                    id="last_name"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input
                    type="text"
                    name="address"
                    id="address"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input
                    type="tel"
                    name="phone_number"
                    id="phone_number"
                    placeholder=""
                    minlength="10"
                    maxlength="15"
                    required
                />
            </div>
            <button type="button" data-next class="action-button">Next</button>
        </fieldset>
        <fieldset class="card" data-step>
            <h3 class="step-title">Career Objective</h3>
            <div class="form-group">
                <textarea
                    id="summary"
                    name="summary"
                    rows="15"
                    cols="45"
                    tabindex="101"
                    style="height: 171px"
                ></textarea>
            </div>
            <button type="button" data-previous class="action-button">
                Previous
            </button>
            <button type="button" data-next class="action-button">Next</button>
        </fieldset>
        <fieldset class="card" data-step>
            <h3 class="step-title">Education</h3>
            <div class="form-group">
                <label for="school_name">School</label>
                <input
                    type="text"
                    name="school_name"
                    id="school_name"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="degree">Degree</label>
                <input
                    type="text"
                    name="degree"
                    id="degree"
                    placeholder=""
                    required
                />
            </div>
            <div class="form-group">
                <label for="description_school">Description</label>
                <textarea
                    id="description_school"
                    name="description_school"
                    rows="15"
                    cols="45"
                    tabindex="101"
                    placeholder="e.g Graduated with High Honors"
                    style="height: 171px"
                ></textarea>
            </div>
            <div class="form-group">
                <label for="start_end_date">Start & End Date</label>
                <div class="date">
                    <input
                        type="text"
                        name="start"
                        id="start_end_date"
                        placeholder="YYYY-MM"
                        required
                    />
                    <input
                        type="text"
                        name="end"
                        id="start_end_date"
                        placeholder="YYYY-MM"
                        required
                    />
                </div>
            </div>
            <button type="button" data-previous class="action-button">
                Previous
            </button>
            <button type="button" data-next class="action-button">Next</button>
        </fieldset>
        <button type="submit" class="action-button">Submit</button>
    </form>
</body>
<script src="/js/script.js"></script>
<script src="/js/datetime_local.js"></script>
